{
  "compilerOptions": {
    "resolveJsonModule": true,
    "incremental": true,
    "target": "ES5",
    "allowJs": true,
    "sourceMap": false,
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./src/*.ts"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "tests", "bin"]
}
